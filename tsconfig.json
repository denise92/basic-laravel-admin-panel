{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "skipLibCheck": true,
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": false,
        "baseUrl": ".",
        "typeRoots": [
          "resources/js/types/*",
          "node_modules/@types/**/*.d.ts"
        ],
        "paths": {
            "@/*": ["./resources/js/*"]
        }
    },
    "include": ["resources/js/**/*.ts", "resources/js/**/*.d.ts", "resources/js/**/*.vue", "resources/js/**/*.js"]
}
